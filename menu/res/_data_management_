#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#include "header.h"

// save data
int main() {
  Game_Manager_Array GMA;
  Game_Manager GM0, GM1;
  GM0.id = 1;
  GM0.rectsize = 10;
  GM1.id = 2;
  GM1.rectsize = 20;

  GMA[0] = GM0;
  GMA[1] = GM1;
  FILE *file= fopen("res/.save/data.bin", "wb");
  
  if (file != NULL) {
    fwrite(GMA, sizeof(Game_Manager_Array), 1, file);
    fclose(file);
  }
  exit(0);
}


// get data
void launch_continue() {
  Game_Manager_Array GMA;
  FILE *file = fopen("../res/.save/data.bin", "rb");
  
  if (file != NULL) {
    fread(GMA, sizeof(Game_Manager_Array), 1, file);
    fclose(file);
  }
  launch_game(&GMA[0]);
}